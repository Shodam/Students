<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

<h3>Login Page</h3>
@ViewBag.error
<form method="post" asp-controller="Account" asp-action="login">
    <table border="0" cellpadding="2" cellspacing="2">
        <tr>
            <td>Username</td>
            <td><input type="text" name="username"></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="password"></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" value="Login"></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="CreateAccount"> Create Account </a></td>
        </tr>
    </table>
</form>

</body>
</html>